---
apiVersion: autoscaling/v1
kind: HorizontalPodAutoscaler
metadata:
  name: minio-hpa
  namespace: minio
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: minio        # Replace with your deployment name
  minReplicas: 4
  maxReplicas: 18
  targetCPUUtilizationPercentage: 50

